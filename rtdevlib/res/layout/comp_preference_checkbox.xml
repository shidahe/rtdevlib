<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layPref"
    android:layout_width="match_parent"
    android:layout_height="56dip"
    android:padding="4dip" >

    <ImageView
        android:id="@+id/pref_icon"
        android:layout_width="16dip"
        android:layout_height="32dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dip"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/pref_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pref_summary"
        android:layout_toLeftOf="@+id/pref_checkbox"
        android:layout_toRightOf="@+id/pref_icon"
        android:gravity="left|center_vertical"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/pref_summary"
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/pref_checkbox"
        android:layout_toRightOf="@+id/pref_icon"
        android:gravity="left|center_vertical" />

    <CheckBox
        android:id="@+id/pref_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dip"
        android:focusable="false" />

</RelativeLayout>